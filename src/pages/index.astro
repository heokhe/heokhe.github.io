---
import Header from './sections/header.astro'
import Section from '../components/Section.astro'
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body class="bg-black text-white scroll-smooth m-0">
    <nav
      class="bg-black bg-opacity-50 backdrop-blur sticky top-0 left-0 right-0 w-full p-8 flex items-center justify-center z-10"
    >
      <svg height="600" width="600" viewBox="0 0 600 600" class="w-16 h-16">
        <path
          transform="translate(50, 50)"
          d="M 0 0
          m 0 75
          a 75 75 0 0 1 75 -75
          h 375
          a 50 50 0 0 1 50 50
          v 0 0
          a 50 50 0 0 1 -50 50
          h -350
          a 100 100 0 0 0 -100 100
          v 200
          a 100 100 0 0 0 100 100
          h 350
          a 50 50 0 0 0 50 -50
          a 50 50 0 0 0 -50 -50
          h -300
          a 50 50 0 0 1 -50 -50
          a 50 50 0 0 1 50 -50
          l 300 0
          a 50 50 0 0 0 50 -50
          a 50 50 0 0 0 -50 -50
          l -250 0"
          fill="none"
          stroke="currentColor"
          stroke-width="30"></path>
        <circle
          cx="165"
          cy="250"
          r="30"
          fill="currentColor"
          style="transform-origin: 165px 250px"></circle>
      </svg>
    </nav>
    <main>
      <Header />
      <Section title="About Me" class="pt-0">
        <p class="text-white text-opacity-60 text-4xl">
          Le biography text goes here
        </p>
      </Section>
      <Section title="Open-source projects" fullWidth>
        <div class="flex flex-wrap">
          <div
            class="w-full md:w-1/2 xl:w-1/3 bg-white bg-opacity-5 p-8 rounded-3xl"
          >
            <div class="font-mono text-2xl">some project</div>
            <p class="opacity-60">Some description text</p>
            <div class="border-t-neutral-700 border-t mt-3 pt-3 font-mono">
              <div class="flex align-center">
                <div class="text-neutral-500 flex-shrink-0">&gt;</div>
                <input
                  type="text"
                  class="border-none appearance-none outline-none ml-3 placeholder:text-neutral-500 flex-grow"
                  style="font: inherit; background: none"
                  placeholder="type here..."
                />
              </div>
              <div class="flex align-center mt-2">
                <div class="text-blue-500 flex-shrink-0">&lt;</div>
                <div class="flex-grow ml-3">output appears here</div>
              </div>
            </div>
          </div>
        </div>
      </Section>
    </main>
  </body>
</html>
<script>
  const [path] = document.getElementsByTagName('path')
  const length = path.getTotalLength()
  path.style.strokeDasharray = `${length} ${length}`
  path.animate(
    [{ strokeDashoffset: -length.toString() }, { strokeDashoffset: '0' }],
    {
      duration: 1000,
      iterations: 1,
      easing: 'ease-out',
    }
  )
</script>
